include  header
block content
  section#login
    .container
      .row
        .col-md-2
        .col-md-8
          h1(style='color:#000;') 司机登录
          form.form-horizontal(action='/login', method='post')
            h4.col-sm-offset-6.text-right
              | 开启您方便之旅
            .form-group
              .col-md-8.col-md-offset-2
                input#car_title.form-control(type='text', placeholder='请输入账号',name="phonenum")
            .form-group
              .col-md-8.col-md-offset-2
                input#car_title.form-control(type='password', placeholder='请输入密码',name="password")
            input.col-md-offset-2.col-md-8.btn.btn-success.col-xs-12(type='submit', value='登录')
        .col-md-2
include footer